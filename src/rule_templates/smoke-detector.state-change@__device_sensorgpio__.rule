{ "flexible" :
  {
    "name"          : "smoke-detector.state-change@__name__",
    "description"   : "TRANSLATE_LUA(Smoke detected)",
    "metrics"       : ["status.__port__"],
    "assets"	    : ["__name__"],
    "logical_asset" : "__logicalasset_iname__",
    "models"	    : ["M12"],
    "types" 	    : ["sensorgpio", "rackcontroller"],
    "results"       :  {
        "high___rule_result__"   : { "action" : [{ "action": "EMAIL" }] }
    },
    "evaluation"    : "
        function main(current_state)
            if current_state == '__normalstate__' then
                return OK, string.format('{ \"key\": \"TRANSLATE_LUA(Smoke in $logicalasset$ is OK. Reported )\", \"variables\": {\"logical_asset\": \"__logicalasset__\"}}')
            end
                return __severity__ , string.format('{ \"key\": \"TRANSLATE_LUA(Smoke detected in $logicalasset$. Reported )\", \"variables\": {\"logical_asset\": \"__logicalasset__\"}}')
        end
    "
  }
}
